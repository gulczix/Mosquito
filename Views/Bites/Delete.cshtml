@model Komar.Models.Bite

@{
    ViewData["Title"] = "Delete";
}

@functions {
    private void Row<TResult>(System.Linq.Expressions.Expression<Func<Bite, TResult>> expression)
    {
        <dt class="col-sm-3">
            @Html.DisplayNameFor(expression)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(expression)
        </dd>
    }
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Bite</h4>
    <hr />
    <dl class="row">
        @{ Row(model => model.Text); }
        @{ Row(model => model.CreationDate); }
        @{ Row(model => model.User.Nick); }
        @{ Row(model => model.BubbleCount); }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
